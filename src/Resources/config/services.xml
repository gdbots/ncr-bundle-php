<?xml version="1.0"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <services>
    <prototype namespace="Gdbots\Bundle\NcrBundle\Command\" resource="../../Command/*" autowire="true">
      <tag name="console.command"/>
    </prototype>

    <!-- binders -->
    <service id="gdbots_ncr.node_command_binder" class="Gdbots\Ncr\Binder\NodeCommandBinder" public="false">
      <tag name="pbjx.event_subscriber"/>
    </service>

    <!-- request handlers -->
    <service id="gdbots_ncr.get_node_batch_request_handler" class="Gdbots\Ncr\GetNodeBatchRequestHandler" public="false">
      <argument type="service" id="ncr"/>
      <tag name="pbjx.handler" curie="gdbots:ncr:request:get-node-batch-request"/>
    </service>
  </services>

</container>
