<?xml version="1.0"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <services>
    <!-- binders -->
    <service id="gdbots_ncr.node_command_binder" class="Gdbots\Ncr\Binder\NodeCommandBinder" public="true">
      <tag name="pbjx.event_subscriber"/>
    </service>

    <!-- request handlers -->
    <service id="gdbots_ncr.get_node_batch_request_handler" class="Gdbots\Ncr\GetNodeBatchRequestHandler" public="true">
      <argument type="service" id="ncr"/>
      <tag name="pbjx.handler"/>
    </service>
  </services>

</container>
